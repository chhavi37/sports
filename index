        <section class="categories-section">
            <div class="container">
                <h2 class="section-title">Sports Categories</h2>
                <div class="categories-grid">
                    <div class="category-card" onclick="filterArticles('football')">
                        <div class="category-icon">🏈</div>
                        <div class="category-name">Football</div>
                    </div>
                    <div class="category-card" onclick="filterArticles('basketball')">
                        <div class="category-icon">🏀</div>
                        <div class="category-name">Basketball</div>
                    </div>
                    <div class="category-card" onclick="filterArticles('baseball')">
                        <div class="category-icon">⚾</div>
                        <div class="category-name">Baseball</div>
                    </div>
                    <div class="category-card" onclick="filterArticles('soccer')">
                        <div class="category-icon">⚽</div>
                        <div class="category-name">Soccer</div>
                    </div>
                    <div class="category-card" onclick="filterArticles('tennis')">
                        <div class="category-icon">🎾</div>
                        <div class="category-name">Tennis</div>
                    </div>
                    <div class="category-card" onclick="filterArticles('hockey')">
